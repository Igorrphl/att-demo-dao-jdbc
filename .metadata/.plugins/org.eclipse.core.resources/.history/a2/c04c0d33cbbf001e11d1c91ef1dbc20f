package Aplicacao;

import javax.persistence.Entity;
import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import dominio.Pessoa;

public class Programa {

	public static void main(String[] args) {

		Pessoa p1 = new Pessoa(null, "Carlinhos", "carlos@gmail.com");
		Pessoa p2 = new Pessoa(null, "Fernando", "fernando@outlook.com");
		Pessoa p3 = new Pessoa(null, "Amanda", "amanda@gmail.com");
		
		//Conexão com o banco de dados
		EntityManagerFactory emf = Persistence.createEntityManagerFactory("exemplo-jpa");
		EntityManager em = emf.createEntityManager();
		
		//Iniciando uma Transação com o BD
		em.getTransaction().begin();
		
		//Pega o obj e salva  no BD
		em.persist(p1);
		em.persist(p2);
		em.persist(p3);
		
		//Confirmando as alterações que eu fiz
		em.getTransaction().commit();
		
		
	}

}
